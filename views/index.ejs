</script> -->

  </div>

  <div id="listreserve" class="container tab-pane fade">
   
    <table class="table">
      <thead>
        <tr>
          <th>รายละเอียด</th>
          <th></th>
          <th>เริ่ม</th>
          <th>สิ้นสุด</th>
          <th>สถานะห้องประชุม</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%  listreserve.forEach(item=> { %>

          <tr>
            <td style="width:110px;">
              <% if(item.room_status=="ใช้งานได้" ){%>
                <a href="reservedetail/<%= item.room_id%>">
                  <div>
                    <img src="<%= item.image_url%>" style="width:100px;height:auto;object-fit: cover;" />
                  </div>
                  <% }if(item.room_status=="ปิดปรับปรุง" ){%>
                    <div>
                      <img src="<%= item.image_url%>" style="width:100px;height:auto;object-fit: cover;" />
                    </div>
                    <% }%>
            </td>
            <td>
              <% if(item.room_status=="ใช้งานได้" ){%>
                <a href="reservedetail/<%= item.room_id%>">
                  <div>
                    <div>
                      ชื่อ : <%= item.reserve_name%>
                    </div>
                    <div>
                      รายละเอียด : <%= item.detail%>
                    </div>
                 
                  </div>
                </a>
                <% }if(item.room_status=="ปิดปรับปรุง" ){%>
                  <div>
                    <div>
                      ชื่อ : <%= item.reserve_name%>
                    </div>
                    <div>
                     รายละเอียด : <%= item.detail%>
                    </div>
                  </div>
                  <% }%>
            </td>
            <td>
              <%= new Date( item.start_datetime).toLocaleString("th-TH")%>
            </td>
            <td>
              <%= new Date( item.end_datetime).toLocaleString("th-TH")%>
            </td>
          
            <td>
              <div>
                <% if(item.room_status=="ใช้งานได้" ){%>
                  <p class="text-success">
                <% }if(item.room_status=="ปิดปรับปรุง" ){%>
                      <p class="text-danger">
                <% }%>
                          <%= item.room_status %>

                      </p>
              </div>
            </td>
            <td>
              <div class="d-flex justify-content-end">
                <div class="btn-group " role="group" aria-label="Basic example">

            
                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal"
                      data-bs-target="#Modaledit<%= item.id%>">แก้ไข</button>

                      <!-- Modal edit-->
                      <div class="modal fade" id="Modaledit<%= item.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <form action="/editreservation" method="post" >
                          <div class="modal-dialog">
                          <div class="modal-content">
                              <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">จองห้องประชุม</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                                  <div class="modal-body">
                                      <div class="mb-3 ">
                                          <label for="room_name">ชื่อห้องประชุม:</label>
                                          <input type="text" class="form-control"  name="id" readonly value="<%= item.id %>" style="display:none;" />
                                          <input type="text" class="form-control"  name="room_id" readonly value="<%= item.room_id %>" style="display:none;" />
                                          <input type="text" class="form-control" id="room_name" placeholder="ชื่อห้อง" name="room_name" readonly value="<%= item.room_name %>" />
                                      </div>
                                      <div class="mb-3 ">
                                          <label for="reserve_name">ชื่อ:</label>
                                          <input type="text" class="form-control" id="reserve_name" placeholder="ชื่อ" name="reserve_name"  value="<%= item.reserve_name %>"  required />
                                      </div>
                                      <div class="mb-3 d-flex flex-row justify-content-between">
                                          <div>
                                              <label for="start_datetime">เริ่ม</label>
                                            <%                               
                                           const start =  formatedlocaldatetime(item.start_datetime)
                                           const end =  formatedlocaldatetime(item.end_datetime)
                                           %>
                                              <input type="datetime-local" id="start_datetime" class="form-control"  name="start_datetime" 
                                              value="<%=  start %>"   required/>
                                          </div>
                                          <div>
                                              <label for="end_datetime">สิ้นสุด</label>
                                              <input type="datetime-local" id="end_datetime" class="form-control"  name="end_datetime" value="<%= end %>"   required/>
                                          </div>
                                      </div>
                                      <div class="mb-3">
                                          <label for="detail">รายละเอียด:</label>
                                          <textarea type="text" class="form-control" placeholder="รายละเอียด" name="detail"
                                            required><%= item.detail %></textarea>
                                        </div>
                                  </div>
                              <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                              <button type="submit" class="btn btn-primary">บันทึก</button>
                              </div>
                          </div>
                          </div>
                      </form>
                      </div>

                    <a href="/deletereservation?id=<%= item.id%>" class="btn btn-danger">ลบ</a>
                 
                </div>
              </div>
            </td>

          </tr>
          <% }) %>
      </tbody>
    </table>
      

  </div>
 
</div>
</div>
<% if(index.length > 0){ %>
  <script>
      Swal.fire({
        title: '<%= index %>',
        icon: "error",
        confirmButtonText: 'ตกลง'
      })
    </script>

<% }%>

</body>

</html>